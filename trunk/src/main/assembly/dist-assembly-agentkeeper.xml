<assembly>

	<id>agentkeeper</id>
	
	<formats>
		<format>zip</format>
	</formats>

	<includeBaseDirectory>true</includeBaseDirectory>

	<moduleSets>
		<moduleSet>
			<includeSubModules>true</includeSubModules>

			<!--  <binaries>
				<outputFileNameMapping>${artifact.artifactId}-${artifact.version}${dashClassifier?}.${artifact.extension}
				</outputFileNameMapping>
				<outputDirectory>lib</outputDirectory>
				<unpack>false</unpack>
			</binaries> -->

			<sources>
				<includeModuleDirectory>false</includeModuleDirectory>
				<fileSets>
					<fileSet>
						<outputDirectory>sources/${module.artifactId}</outputDirectory>
						<includes>
							<include>src/**</include>
							<include>pom.xml</include>
						</includes>
					</fileSet>
					<fileSet>
						<outputDirectory>sources/${module.artifactId}</outputDirectory>
						<includes>
							<include>lib/**</include>
						</includes>
					</fileSet>
				</fileSets>
			</sources>

		</moduleSet>
	</moduleSets>

	<fileSets>
		<fileSet>
			<directory>/target/site/</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>apidocs/**</include>
			</includes>
		</fileSet>
	</fileSets>

	<files>
		<file>
			<source>target/jadex-agentkeeper-${project.version}-jar-with-dependencies.jar</source>
			<outputDirectory>/</outputDirectory>
			<destName>jadex-agentkeeper-${project.version}.jar</destName>
		</file>
		<!-- <file>
			<source>docs/readme.txt</source>
			<outputDirectory>/</outputDirectory>
			<filtered>true</filtered>
		</file> -->
		<file>
			<source>gpl-3.0.txt</source>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>readme.txt</source>
			<outputDirectory>/</outputDirectory>
		</file>
<!-- 		<file> -->
<!-- 			<source>jadex-editor-bpmn/src/main/java/jadex/bpmn/editor/COPYING</source> -->
<!-- 			<outputDirectory>/</outputDirectory> -->
<!-- 		</file> -->
		
		<!-- ======== files required for building the distribution ======== -->
		
		<file>
			<source>pom.xml</source>
			<outputDirectory>sources</outputDirectory>
			<destName>pom.xml</destName>
		</file>
		<file>
		    <source>src/main/assembly/dist-assembly-agentkeeper.xml</source>
		    <outputDirectory>sources/src/main/assembly</outputDirectory>
		</file>
				<file>
			<source>gpl-3.0.txt</source>
			<outputDirectory>/sources</outputDirectory>
		</file>
		<file>
			<source>readme.txt</source>
			<outputDirectory>/sources</outputDirectory>
		</file>
		
